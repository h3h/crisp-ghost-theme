{{!< default}}
{{#foreach posts}}
<section id="{{id}}" class="{{post_class}}">
    <h3 class="post-title">
        <a href="{{url}}">{{title}}</a>
        <span class="meta-date">
            <span class="separator">&middot;</span>
            {{date published_at format='MMMM Do, YYYY'}}
        </span>
    </h3>
</section>
{{/foreach}}
